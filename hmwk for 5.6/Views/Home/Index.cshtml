@using Data
@model IEnumerable<Question>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <h1>Questions</h1>
    <div class="col-md-8 col-md-offset-2">
        @foreach (Question q in Model)
        {
            <div class="well">
                <a href="/home/questionpage?id=@q.Id">@q.Title</a>
                @if (q.Text.Length > 50)
                {
                    <h5>
                        @for (int i = 0; i < 50; i++)
                        {
                            @q.Text[i];
                        }...
                    </h5>
                }
                else
                {
                    <h5>@q.Text</h5>
                }
            </div>
            <h3>@q.Likes</h3>
            @*@foreach (Tag t in Question)
            {
                <h4></h4>
            }*@

        }

    </div>
</div>

